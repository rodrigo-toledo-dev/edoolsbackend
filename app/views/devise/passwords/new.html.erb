<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-devise' }) do |f| %>
  <% flash.each do |key, message| %>
  <div class="text-center alert alert-<%=key == 'notice' ? 'success' : 'danger' %>">
    <%= message %>
  </div>
  <% end %>

  <h5 class="mb-3 font-weight-normal"><%=t(:forgot_your_password_title)%></h5>
  <div>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t(:fill_with_email), autocomplete: "email" %>
    <%= f.submit t(:send_instructions), class: 'btn btn-lg btn-primary btn-block mt-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
