<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-devise'}) do |f| %>
  <% flash.each do |key, message| %>
  <div class="text-center alert alert-<%=key == 'notice' ? 'success' : 'danger' %>">
    <%= message %>
  </div>
  <% end %>
  <h5 class="mb-3 font-weight-normal"><%=t(:enter_with_credentials)%></h5>
  <div>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t(:fill_with_email), required: true %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t(:fill_with_password), required: true %>
    <%= f.submit t(:access), class: 'btn btn-lg btn-primary btn-block mt-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
