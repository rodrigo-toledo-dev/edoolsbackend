<h3 class="mb-3">Escolas</h3>

<table class="table mt-3 mb-3 datatable">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email do Dono</th>
      <th>Pitch</th>
      <th>Subdomínio</th>
      <th>Data da Criação</th>
      <th>Cursos</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.owner_email %></td>
        <td><%= school.pitch %></td>
        <td><%= school.subdomain %></td>
        <td><%= l school.creation_at %></td>
        <td><%= school.courses.count %> curso(s)</td>
        <td>
          <div class="btn btn-group">
            <%= link_to 'Editar', edit_school_path(school), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Apagar', school, method: :delete, data: { confirm: 'Deseja continuar coma operação?' }, class: 'btn btn-danger btn-sm' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Escola', new_school_path, class: 'btn btn-success' %>
